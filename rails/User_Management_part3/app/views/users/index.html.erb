<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All The Users</title>
  </head>
  <body>
    <h1>Listing Users</h1>
    <% if @users %>
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email Address</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/users/<%= user.id %>">Show</a>
            <a href="/users/<%= user.id %>/edit">Edit</a>
            <form class="" action="/users/<%= user.id %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
              <input type="submit" name="" value="Destroy">
            </form>
          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
    <%end%>
    <a href="/users/new"><h2>New User</h2></a>
  </body>
</html>
