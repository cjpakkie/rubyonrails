<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All The Users</title>
  </head>
  <body>
    <h1>Listing Users</h1>
    <% if @users %>
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email Address</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
        </tr>
        <%end%>
      </tbody>
    </table>
    <%end%>
  </body>
</html>
