<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All the Dojos</title>
  </head>
  <body>
    <h1>Listing <%= pluralize(@dojos.count, "Dojo") %></h1>
    <%= flash[:notice] %>
    <% if @dojos %>
    <table>
      <thead>
        <tr>
          <th>Coding Dojo Branch</th>
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @dojos.each do |dojo| %>
        <tr>
          <td><%= dojo.branch %></td>
          <td><%= dojo.street %></td>
          <td><%= dojo.city %></td>
          <td><%= dojo.state %></td>
          <td>
            <a href="/dojos/<%=dojo.id%>">Show</a>
            <a href="/dojos/<%=dojo.id%>/edit">Edit</a>
            <form class="" action="/dojos/<%=dojo.id%>" method="post">
              <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
              <input type="hidden" name="_method" value="delete">
              <input type="submit" name="" value="Delete">
            </form>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
    <a href="/dojos/new">New User</a>
  </body>
</html>
